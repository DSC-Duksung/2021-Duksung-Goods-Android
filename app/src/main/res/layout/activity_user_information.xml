<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_user_information_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_user_information_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@+id/iv_user_information_back"
            android:text="회원정보"
            android:textSize="20dp" />
        <Button
            android:id="@+id/btn_user_information_withdrawal"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="회원탈퇴"
            android:textSize="14dp"
            android:background="@drawable/shape_gray_round"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/burgundy"
            android:layout_below="@+id/btn_user_information_withdrawal"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="16dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/user_information_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/shape_gray_border"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:lines="1"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="16dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/user_information_nickname"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/shape_gray_border"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:lines="1"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴대폰 번호"
            android:textSize="16dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/user_information_phone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/shape_gray_border"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:lines="1"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="16dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/user_information_email"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/shape_gray_border"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:lines="1"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            android:textSize="16dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/user_information_address"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/shape_gray_border"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:lines="1"
            android:singleLine="true"/>

        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_user_informaion_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_burgundy_round"
                android:text="회원정보수정"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/btn_user_information_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/shape_burgundy_border"
                android:text="취소"
                android:textColor="@color/burgundy"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"/>
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>